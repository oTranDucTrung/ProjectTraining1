<div class="row">
  <div class="col-md-offset-3 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= yield(:button_text) %> <%= t ".category" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for([:admin, @category]) do |f| %>
              <%= render "shared/error_messages", object: f.object %>
              <form role="form">
                <div class="form-group">
                  <%= f.input :parent_id, collection: options,
                    label: t(".select_category"), input_html: { class: "form-control" },
                    selected: params[:parent_id], include_blank: t(".none") %>
                </div>
                <div class="form-group">
                  <div class="form-group">
                    <%= f.input :name, label: t(".category_name"),
                      placeholder: "Enter category name",
                      input_html: { class: "form-control" } %>
                  </div>
                  <div class="form-group">
                    <%= f.input :description, label: t(".description"),
                      placeholder: "Enter description",
                      input_html: { class: "form-control" } %>
                  </div>
                  <div class="form-group">
                    <%= f.file_field :thumbnail, label: t(".thumbnail") %>
                  </div>
                  <%= f.submit yield(:button_text), class: "btn btn-success" %>
                </div>
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
