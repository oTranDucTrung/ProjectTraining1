<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header title"><strong><%= @category.name %></strong></h2>
    <table class="table table-hover table-bordered datatable">
      <thead class="text-center">
        <tr>
          <th><%= t ".course" %></th>
          <th><%= t ".description" %></th>
          <th><%= t ".lecture" %></th>
          <th><%= t ".rating" %></th>
        </tr>
      </thead>
      <tbody>
        <% @category.courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= link_to course.user_name, admin_user_path %></td>
            <td><%= course.rate_average %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
